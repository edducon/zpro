#include <iostream>
 
using namespace std;
 
int main(int argc, char *argv[])
{
    int iSum = 0, iEntered = 0;
    float mean = 0.0;
    int input = 0;
    
    do
    {
        system("cls"); // Nebo system("clear") pokud používáte jako překladatel systém Linux/Ubunty
        cout << "Součet čísel: " << iSum << " Zapsaných hodnot: " << iEntered  << " Určete průměr z hodnot: " << mean << endl << endl;
        cout << "Napište čísla (např. 2 3 4 5 6 7 8): ";
        cin >> input;
        iSum += input;
        iEntered++;
        mean = (float)iSum/iEntered;
    }
    while (1 == 1);
}
